@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model NoKates.WebAdmin.Pages.EditUserModel
@{
}
<div>
       <form method="post">
      <div style="display:flex;">
         <div name="TextFields_Left" style="width:49%;">
            <div class="form-group">
               <label for="Input_FirstName">First Name</label>
               <input class="form-control" type="text" id="Input_FirstName" name="Input.FirstName" value="@Model.OriginalUser.FirstName" autocomplete="off" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">
               <span class="text-danger field-validation-valid" data-valmsg-for="Input.FirstName" data-valmsg-replace="true"></span>
            </div>

                        <div class="form-group">
               <label for="Input_LastName">Last Name</label>
               <input class="form-control" type="text" id="Input_LastName" name="Input.LastName" value="@Model.OriginalUser.LastName" autocomplete="off" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">
               <span class="text-danger field-validation-valid" data-valmsg-for="Input.LastName" data-valmsg-replace="true"></span>
            </div>

                        <div class="form-group">
               <label for="Input_Name">Username</label>
               <input class="form-control" type="text" id="Input_Name" name="Input.Name" value="@Model.OriginalUser.Username" autocomplete="off" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">
               <span class="text-danger field-validation-valid" data-valmsg-for="Input.Name" data-valmsg-replace="true"></span>
            </div>

                        <div class="form-group">
               <label for="Input_Email">Email</label>
               <input class="form-control" type="email" id="Input_Email" name="Input.Email" value="@Model.OriginalUser.Email" autocomplete="off" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">
               <span class="text-danger field-validation-valid" data-valmsg-for="Input.Email" data-valmsg-replace="true"></span>
            </div>

                        <div class="form-group">
               <label for="Input_PhoneNumber">Phone Number</label>
               <input class="form-control" type="tel" id="Input_PhoneNumber" name="Input.PhoneNumber" value="@Model.OriginalUser.PhoneNumber" autocomplete="off" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">
               <span class="text-danger field-validation-valid" data-valmsg-for="Input.PhoneNumber" data-valmsg-replace="true"></span>
            </div>

                        <div class="form-group">
               <label for="Input_IsActive">IsActive</label>
               <input class="form-control" type="checkbox" id="Input_IsActive" name="Input.IsActive" value="@Model.OriginalUser.IsActive" @Model.GetActiveCheckedStatus(@Model.OriginalUser.IsActive) autocomplete="off" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">
               <span class="text-danger field-validation-valid" data-valmsg-for="Input.IsActive" data-valmsg-replace="true"></span>
            </div>


                   <div name="RolesTable_Bottom_Left">
            <div class="form-group">
               <div id="page-wrap">
                  <h2 class="text-center">Roles</h2>
                  <div style="overflow:scroll; height:500px;">
                     <ul class="treeview">
                        @foreach (var role in @Model.Roles)
                        {
                        <li>
                           <input type="checkbox" name="Role @role.Id" id="Role @role.Id" @Model.GetRoleCheckedStatus(@role.Id)>
                           <label for="Role @role.Id" class="custom-unchecked">@role.Name</label>        
                        </li>
                        }
                     </ul>
                  </div>
               </div>
            </div>
         </div>
         </div>
         <div name="EndpointsTable_Right" style="width:49%;" >
            <div class="form-group">
               <div id="page-wrap">
                  <h2 class="text-center">Additional Endpoints</h2>
                  <div style="overflow:scroll; height:1000px;">
                     <ul class="treeview">
                        @foreach (var group in @Model.EndpointGroups)
                        {
                        <li>
                           <input type="checkbox" name="Group @group.Key" id="Group @group.Key" @Model.GetGroupCheckedStatus(@group.Key)>
                           <label for="@group.Key" class="custom-unchecked">@group.Key</label>
                           <ul>
                              @foreach (var endpoint in @group.Value)
                              {
                              <li>
                                 <input type="checkbox" name="EndpointPermission @endpoint" id="EndpointPermission @endpoint" @Model.GetCheckedStatus(@endpoint)>
                                 <label for="@group.Key@endpoint" class="custom-checked">@endpoint</label>
                              </li>
                              }
                           </ul>
                        </li>
                        }
                     </ul>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <div>
            
      </div>
      <div class="form-group">
         <button id="submit" type="submit" class="btn btn-primary">Save</button>
      </div>
   </form>
</div>
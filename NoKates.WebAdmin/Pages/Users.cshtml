@page
@model NoKates.WebAdmin.Pages.UsersModel
@{
}

<div class="text-center" style="overflow-Y:scroll; height:800px;">

    <h1>Users</h1>
        <div>
        <a href="./EditUser">Add</a>
    </div>
    <table style="width: 100%">
    <colgroup>
       <col span="1" style="width: 20%;">
       <col span="1" style="width: 20%;">
       <col span="1" style="width: 20%;">
       <col span="1" style="width: 40%;">
    </colgroup>
  <thead>
    <tr>
      <th>Username</th>
      <th>First</th>
      <th>Last</th>
      <th>Email</th>
    </tr>
   </thead>
   <tbody>
                   @foreach(var user in @Model.Users)
    {
     <tr>
       <td><a href="./EditUser?UserId=@user.Id">@user.Username</a></td>
       <td>@user.FirstName</td>
       <td>@user.LastName</td>
       <td>@user.Email</td>
     </tr> 
    }
   
     <tr>
     </tr>
  </tbody>
</table>
</div>
